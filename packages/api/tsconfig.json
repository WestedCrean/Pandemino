{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "build",
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"],
        "baseUrl": "./src",
        "paths": {
            "@routes/*": ["routes/*"],
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"]
        }
    },
    "compileOnSave": true,
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
