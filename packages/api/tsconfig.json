{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "baseUrl": "src",
        "paths": {
            "routes": ["routes/*"],
            "models": ["models/*"],
            "controllers": ["controllers/*"],
            "db": ["db/*"]
        }
    },
    "include": ["src/**/*", "src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
